<div class="row">
  <div class="col mb-2">
    <div
      data-controller="mapbox"
      data-mapbox-scrobbles="<%=
        json_partial('location_scrobbles/location_scrobbles', locals: { location_scrobbles: [scrobble] })
      %>"
    >
      <div data-target="mapbox.map"></div>
    </div>
  </div>
</div>

<% if scrobble.place? %>
  <%= render 'place_edit', scrobble: scrobble %>
<% elsif scrobble.transit? %>
  <%= render 'transit_edit', scrobble: scrobble %>
<% end %>
