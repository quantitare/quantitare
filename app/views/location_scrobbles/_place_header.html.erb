<div class="row">
  <% if scrobble.singular? %>
    <div class="col" data-controller="editable">
      <%= page_header_tag data: { target: 'editable.active' } do %>
        <%= form_with model: scrobble, data: { target: 'editable.form' } do |f| %>
          <div class="input-group input-group-lg">
            <div class="input-group-prepend">
              <span class="input-group-text"><%= icon_tag scrobble.category_icon %></span>
            </div>

            <%= f.text_field :name, class: 'form-control', data: { target: 'editable.input' } %>

            <div class="input-group-append">
              <%= f.button class: 'btn btn-outline-success' do %>
                <%= fa_icon_tag 'fas fa-check' %>
              <% end %>

              <%= button_tag class: 'btn btn-outline-danger', data: { action: 'editable#deactivate' } do %>
                <%= fa_icon_tag 'fas fa-times' %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <%= page_header_tag data: { target: 'editable.inactive' } do %>
        <%= icon_tag scrobble.category_icon %>

        <span class="pl-2" data-target="editable.output" data-action="click->editable#activate">
          <%= scrobble.name %>
        </span>

        <small class="text-muted"><%= scrobble.category %></small>
      <% end %>
    </div>
  <% else %>
    <div class="col">
      <%= page_header_tag do %>
        <%= icon_tag scrobble.category_icon, size: :sm_dark %>

        <span class="pl-2"><%= scrobble.name %></span>

        <small class="text-muted"><%= scrobble.category %></small>
      <% end %>
    </div>
  <% end %>
</div>
